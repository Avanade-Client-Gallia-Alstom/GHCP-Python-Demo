{
    
    "indentation": {
        "enabled": true,
        "spaces": 4
    },
    "line_length": {
        "enabled": true,
        "max_length": 80
    },
    "variable_naming": {
        "enabled": true,
        "convention": "snake_case"
    },
    "function_naming": {
        "enabled": true,
        "convention": "snake_case"
    },
    "class_naming": {
        "enabled": true,
        "convention": "PascalCase"        
    },    
    "import_statements": {
        "enabled": true,
        "order": [
            "standard_library",
            "third_party",
            "local"
        ]
    },
    "blank_lines": {
        "enabled": true,
        "around_functions": 2,
        "around_classes": 2,
        "between_imports": 1
    },
    "comments": {
        "enabled": true,
        "style": "single_line"
    }
    
}